<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inho.qrtreasure.MainActivity">

    <TextView
        android:id="@+id/scoreTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/scoreVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreTitle"
        android:textAlignment="center"
        android:textSize="100sp"
        android:text="100"
        />

    <View
        android:id="@+id/cameraView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreVal"
        android:layout_above="@id/cameraButton"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="@string/scan"
        android:onClick="QrScan"
        />


</RelativeLayout>